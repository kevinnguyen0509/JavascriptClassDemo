@model List<UserRole>
@{
    ViewData["Title"] = "UserRoles";
}

<div class="row">
    <div class="col-12">
        <form id="roleForm">
            <div class="form-group">
                <label for="nameTxt">Name</label>
                <input type="text" name="Name" class="form-control" id="nameTxt" aria-describedby="emailHelp" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="roleTxt">Role</label>
                <input type="text" name="Role" class="form-control" id="roleTxt" placeholder="Role">
            </div>
            <button type="submit" id="userSubmitBtn" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Action</th>
                    <th scope="col">Name</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody id="userRoleTable">
                @await Html.PartialAsync("Partials/userRoleTableInfo", Model)
            </tbody>
        </table>
    </div>
</div>


<script type="module" src="~/js/Home/UserRoleView.js"></script>

